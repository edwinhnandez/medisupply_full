apiVersion: apps/v1
kind: Deployment
metadata:
  name: proveedor
  namespace: event-mesh-system
  labels:
    app: proveedor
    service: proveedor
spec:
  replicas: 1
  selector:
    matchLabels:
      app: proveedor
  template:
    metadata:
      labels:
        app: proveedor
        service: proveedor
    spec:
      containers:
      - name: proveedor
        image: proveedor:latest
        imagePullPolicy: Never
        ports:
        - containerPort: 8000
          name: http
        env:
        - name: SERVICE_PORT
          value: "8000"
        - name: RABBITMQ_URL
          value: "amqp://guest:guest@rabbitmq-service:5672/"
        - name: RABBITMQ_QUEUE_NAME
          value: "recepcion-proveedor-queue"
        - name: RABBITMQ_EXCHANGE_NAME
          value: "recepcion-proveedor-exchange"
        - name: RABBITMQ_ROUTING_KEY
          value: "recepcion.proveedor"
        # DynamoDB Configuration
        # For LOCAL DynamoDB (current setup):
          value: "http://dynamodb-local:8000"
        - name: DYNAMODB_REGION: "us-west-2"
          value: "us-west-2"
        - name: AWS_ACCESS_KEY_ID: "YOUR_KEY"
          value: "AKIA..."
        - name: AWS_SECRET_ACCESS_KEY: "YOUR_SECRET"
          value: "..."
        # For EXTERNAL DynamoDB (AWS):
        # Change DYNAMODB_REGION: "us-west-2"
        # Change AWS_ACCESS_KEY_ID: "YOUR_KEY"
        # Change AWS_SECRET_ACCESS_KEY: "YOUR_SECRET"
        - name: JAEGER_ENDPOINT
          value: "http://jaeger-collector:14268/api/traces"
        - name: ENVIRONMENT
          value: "production"
        resources:
          requests:
            memory: "256Mi"
            cpu: "100m"
          limits:
            memory: "512Mi"
            cpu: "250m"
        livenessProbe:
          httpGet:
            path: /health
            port: 8000
          initialDelaySeconds: 30
          periodSeconds: 30
          timeoutSeconds: 10
          failureThreshold: 3
        readinessProbe:
          httpGet:
            path: /health
            port: 8000
          initialDelaySeconds: 10
          periodSeconds: 10
          timeoutSeconds: 5
          failureThreshold: 3
        volumeMounts:
        - name: app-logs
          mountPath: /app/logs
      volumes:
      - name: app-logs
        emptyDir: {}

---
apiVersion: v1
kind: Service
metadata:
  name: proveedor-service
  namespace: event-mesh-system
  labels:
    app: proveedor
    service: proveedor
spec:
  ports:
  - port: 8000
    targetPort: 8000
    name: http
  selector:
    app: proveedor
